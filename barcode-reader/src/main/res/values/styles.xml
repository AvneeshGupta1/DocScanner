<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!--list item body1 main items size,tab-->
    <style name="StyleBody1" parent="parent">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@string/roboto_regular</item>
    </style>

    <style name="CardViewStyle" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
        <item name="android:layout_marginEnd">@dimen/_5sdp</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">5dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
</resources>